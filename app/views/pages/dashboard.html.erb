<h1 class="mt-3">My Profile</h1>

<div class="cards-container d-flex flex-wrap justify-content-center">
  <div class="card mx-3 mb-3 mt-5" style="width: 500px;">
    <%= cl_image_tag(current_user.photo.key, crop: :fill, class: "card-img-top")  %>
    <div class="card-body">
      <h1><%= current_user.first_name %></h1>
      <h5><%= current_user.description %></h5>
        <%= link_to "Edit my profile", edit_user_profile_path(current_user), { :class=>"btn btn-primary btn-lg btn-block" } %>
        <%= link_to "Edit my account details", edit_user_registration_path, { :class=>"btn btn-primary btn-lg btn-block" } %>
    </div>
  </div>
</div>
<br>
<%= link_to "My personal bookings", my_bookings_path,  { :class=>"btn btn-primary btn-lg btn-block" }  %>
