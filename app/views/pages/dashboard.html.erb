<h2 class="mt-3 text-center">My Profile</h2>
<div class="cards-container d-flex flex-wrap mt-5">
  <div class="card mx-3 mt-3" style="width: 500px;">
    <%= cl_image_tag(current_user.photo.key, crop: :fill, class: "card-img-top")  %>
    <div class="card-body">
      <div class="card-title">
        <h1><%= current_user.first_name %></h1>
      </div>
      <span class="card-detail">
      <h5><%= current_user.description %></h5>
        <%= link_to "Edit my profile", edit_user_profile_path(current_user), { :class=>"btn btn-primary btn-sm rounded-pill" } %>
        <%= link_to "Edit my account details", edit_user_registration_path, { :class=>"btn btn-primary btn-sm rounded-pill" } %>
    </div>
  </div>

  <div class="card align-items-center mt-3 mb-3" style="width: 450px; height:550px">
    <h2 class="mt-3">Upcoming bookings</h2>
     <div class="card-body">
       <div class="text-center mt-3">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Name</th>
              <th scope="col">Start Date</th>

            </tr>
          </thead>
          <tbody>
            <% current_user.bookings.each do |booking|  %>
              <tr>
                <th scope="row">1</th>
                <td> <%= booking.friend.name  %></td>
                <td></td>
                <td></td>
              </tr>

            <tr>
              <th scope="row">2</th>
              <td><%= booking.start_time.strftime("#{booking.start_time.day.ordinalize} %B %-l.%M%P") %></td>
            </tr>
            <% end %>
            <tr>
              <th scope="row">3</th>
              <td></td>




            </tr>
          </tbody>
          </table>
       </div>
     </div>
  </div>
</div>

<div class="mb-3 mt-3 text-center">
<%= link_to "My personal bookings", my_bookings_path,  { :class=>"btn btn-primary btn-sm rounded-pill" }  %>
<%= link_to "My Friend", my_listings_path,  { :class=>"btn btn-primary btn-sm rounded-pill" }   %>

</div>

