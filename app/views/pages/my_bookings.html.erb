<h1 class="mt-3">Browse My Bookings</h1>

<div class="cards-container d-flex flex-wrap justify-content-center">
  <% @bookings.each do |booking| %>
  <div class="card mx-3 mb-3" style="width: 300px;">
    <div class="card-body">
      <h5 class="card-title"><%= link_to "Booking with #{booking.friend.name}", booking_path(booking) %></h5>
      <%= cl_image_tag booking.friend.photo.key, height: 350, width: 350, crop: :fill, class: "card-img-top" %>
      <p><%= booking.start_time %></p>
      <div class = "d-flex justify-content-center mb-1">
      <%=  link_to "Review",  new_booking_review_path(booking), { :class=>"btn btn-primary rounded-pill align-items-center rounded-pill" }  %>
    </div>
    </div>
  </div>
  <% end %>
</div>

<%= link_to "Back to the your dashboard", dashboard_path, { :class=>"btn btn-primary btn-lg btn-block mt-5 rounded-pill" } %>

