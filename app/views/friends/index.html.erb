<h1 class="text-center">Find a friend for any occasion</h1>
<div class="">
  <%= render 'search_bar' %>
  <div id="map"
       style="width: 100%; height: 600px;"
       data-markers="<%= @markers.to_json %>"
       data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
  <br>
  <div>
    <div class="cards-container d-flex flex-wrap justify-content-center">
  <% @friends.each do |friend| %>
      <div class="card mx-3 mb-3 shadow mb-5 bg-white rounded" style="width: 300px;">
        <%= cl_image_tag friend.photo.key, height: 350, width: 350, crop: :fill, class: "card-img-top" %>
        <div class="card-body">
          <h5 class="card-title"><%= friend.name %></h5>
          <p class="card-text"><%= friend.description %></p>
          <p class="card-text">$<%= friend.price %> per hour<br> <i class="fas fa-map-marker">  </i><%=  friend.location %></p>
          <%= link_to "View", friend_path(friend), { :class=>"btn btn-primary btn-lg btn-block" } %>
        </div>
      </div>
    <% end %>
    <div class="card mx-3 mb-3 shadow mb-5 bg-white rounded">
    <div class="card-body">
      <h5 class="card-title">List a friend</h5>
      <p class="card-text">Have a friend you'd like to list?</p>
      <%= link_to "Add a friend", new_friend_path, { :class=>"btn btn-primary btn-lg btn-block" }  %>
    </div>
    </div>
  </div>
  </div>
</div>
