<div class="container align-items-center">
  <div class="row">
     <div class="col-sm-12 col-md-6">
       <div class="card" style="width: 18rem;">
        <%= cl_image_tag @friend.photo.key, height: 300, width: 400, crop: :fill, class: "card-img-top"  %>
        <div class="card-body ">
          <h5 class="card-title"><%= @friend.name %></h5>
          <p class="card-text"><%= @friend.description  %></p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><p>Age: <%= @friend.price %></p></li>
          <li class="list-group-item"><p>Location: <%= @friend.location  %></li>
        </ul>
        <div class="card-body">
          <a href="#" class="btn btn-primary">Book now</a>
        </div>
      </div>
  </div>
</div>

