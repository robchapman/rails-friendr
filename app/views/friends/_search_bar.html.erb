<%= form_tag friends_path, method: :get, :class => 'd-flex' do %>
  <%= text_field_tag :query_attributes,
    params[:query_attributes],
    class: "form-control",
    placeholder: "Find a friend"
  %>
    <%= text_field_tag :query_location,
    params[:query_location],
    class: "form-control",
    placeholder: "Enter a location"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>
<br>
